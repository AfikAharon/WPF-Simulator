<UserControl x:Class="FlightSimulator.Views.MyControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height= "*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <local:Joystick Grid.Row="1" Grid.Column="1" Loaded="FlightBoard_Loaded"/>
        <TextBlock Name="aileronButton" Height="30" Width="108"  
             FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
             Text=" ← aileron →"  
             Margin="168,10,0,0" VerticalAlignment="Top"  
             HorizontalAlignment="Left" Grid.Row="1" RenderTransformOrigin="0.275,0.244">
        </TextBlock>
        <TextBlock Name="rudderButton" Height="30" Width="108"  
             FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
             Text=" ← rudder →"  
             Margin="168,410,0,0" VerticalAlignment="Top"  
             HorizontalAlignment="Left" Grid.Row="1" RenderTransformOrigin="0.275,0.244">
        </TextBlock>
        <StackPanel>

        </StackPanel>
    </Grid>

</UserControl>
