<UserControl x:Class="FlightSimulator.Views.MyControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Border BorderBrush ="Gray" BorderThickness="1">
        <Grid  Background="White" Margin="30,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height= "*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <local:Joystick x:Name="myJoystick" Grid.Row="1" Loaded="FlightBoard_Loaded" Margin="-11,-19,-36,-9"/>
        <TextBlock Name="aileronButton" Height="30" Width="108"  
             FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
             Text=" ← aileron →"  
             Margin="182,10,0,0" VerticalAlignment="Top"  
             HorizontalAlignment="Left" Grid.Row="1" RenderTransformOrigin="0.275,0.244">
        </TextBlock>
        <TextBlock Name="rudderButton" Height="30"  
             FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
             Text=" ← rudder →"  
             Margin="183,420,159,0" VerticalAlignment="Top" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
        <StackPanel/>
        <Slider x:Name="throttleSlider" TickPlacement="BottomRight" 
                TickFrequency="0.1" Margin="-69,186,254,200" ValueChanged="Slider_ValueChanged" 
                RenderTransformOrigin="0.5,0.5" Grid.Row="1"  Maximum="1" Minimum="-1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="rudderSlider" TickPlacement="TopLeft" 
                TickFrequency="0.1" Margin="119,357,66,29" ValueChanged="Slider_ValueChanged" 
                IsSnapToTickEnabled="True"
                RenderTransformOrigin="0.5,0.5" Grid.Row="1"
                Maximum="1" Minimum="-1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-179.802"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBlock x:Name="throttle" Height="30" Width="108"  
            FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
            Text=" ← throttle →"  
            Margin="-4,172,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" Grid.Row="1" RenderTransformOrigin="-0.324,1.277">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.897"/>
                    <TranslateTransform X="33.587" Y="-95.628"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="elevator" Height="30" Width="123" 
            FontSize="16" FontFamily="Verdana" FontWeight="Bold"  
            Text=" ← elevator →"  
            Margin="410,171,-83,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" Grid.Row="1" RenderTransformOrigin="-0.324,1.277">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.897"/>
                    <TranslateTransform X="33.587" Y="-95.628"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="valuesRudder" Height="30" 
            Text="{Binding rudderSlider,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
            FontSize="16" FontWeight="Bold"  
            Margin="400,365,9,55" Grid.Row="1" RenderTransformOrigin="-0.155,-0.454"  />
        <TextBlock x:Name="valuesThrottle" Height="30" 
            Text="{Binding throttleSlider,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
            FontSize="16" FontWeight="Bold"  
            Margin="52,30,357,390" Grid.Row="1" RenderTransformOrigin="-0.155,-0.454"  />
        <TextBlock x:Name="valuesElevator" Height="30" 
            FontSize="16" FontWeight="Bold"  
            Text="{Binding }" Margin="399,62,10,358" Grid.Row="1" RenderTransformOrigin="-0.155,-0.454"  />
        <TextBlock x:Name="valuesAileron" 
            FontSize="16" FontWeight="Bold"  
            Text="{Binding }" Margin="338,14,68,397" Grid.Row="1" RenderTransformOrigin="-0.155,-0.454"  />
        </Grid>
    </Border>
</UserControl>

